
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/pages/Song.js"></script>
<script src="~/Content/pages/Artist.js"></script>



<h2>Index</h2>
<input type="text" hidden id="txtid" />

<label>Song Name </label>
<input type="text" id="txtName" name="name" class="form-control" maxlength="100">
<br />

<label>Date Of Release</label>
<input type="date" id="txtd_o_r" name="name" class="form-control" maxlength="100" value="">
<br />


<label>ArtWork </label>
<input type="file" id="File1" value="Upload image" class="form-control" maxlength="100">
<br />
<label for="select1">Artist</label>
<select class="form-select" id="ddlaerlist" value="-Select Artist">
</select>

<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
   + Add Artist 
</button>
<br />
<br/>
<button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Savesong()">Save</button>
<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

<br />
<br />

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">+ Add Artist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <label>Artist Name </label>
                <input type="text" id="txtArtName" name="name" class="form-control" maxlength="100">
                <br />

                <label>Date Of Birth</label>
                <input type="date" id="txtd_o_b" class="form-control" maxlength="100" value="">
                <br />


                <label>Bio </label>
                <input type="text" id="txtbio" class="form-control" maxlength="100">
                <br />
               

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="Saveartist()">Done</button>
            </div>
        </div>
    </div>
</div>





