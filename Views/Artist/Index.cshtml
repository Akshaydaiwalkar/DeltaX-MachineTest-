
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/pages/Song.js"></script>
<script src="~/Content/pages/Artist.js"></script>

<h3>Top 10 Song</h3>

<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter1">
    + Add Song
</button>
<br />
<br />
<table id="tblsearch" border="1" class="table table-striped table-responsive">
    <thead class="bg-dark">
        <tr class="text-white ">

            <th>Song </th>
            <th>Date Of Released</th>
            <th>ArtWork</th>
            <th>Artist</th>

        </tr>
    </thead>
    <tbody></tbody>
</table>
<br />
<h3>Top 10 Artist</h3>
<table id="tblart" border="1" class="table table-striped table-responsive">
    <thead class="bg-dark">
        <tr class="text-white ">
           
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Bio</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Add Song</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <label>Song Name </label>
                <input type="text" id="txtName" name="name" class="form-control" maxlength="100">
                <br />

                <label>Date Of Release</label>
                <input type="date" id="txtd_o_r" name="name" class="form-control" maxlength="100" value="">
                <br />


                <label>ArtWork </label>
                <input type="file" id="File1" value="Upload image" class="form-control" maxlength="100">
                <br />
                <label for="select1">Artist</label>
                <select class="form-select" id="ddlselect1" value="-Select Name">
                </select>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="Savesong()">Done</button>
            </div>
        </div>
    </div>
</div>